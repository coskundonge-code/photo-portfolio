# Supabase Ayarları
# Supabase.com'dan project settings > API bölümünden alınacak
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Admin Şifresi (istediğin bir şifre belirle)
ADMIN_PASSWORD=your-secure-password-here

# Resend E-posta Ayarları (resend.com'dan API key alınacak)
RESEND_API_KEY=re_xxxxxxxxxxxxxx
# Doğrulanmış domain varsa kullan, yoksa boş bırak (onboarding@resend.dev kullanılır)
RESEND_FROM_EMAIL=noreply@your-domain.com
# Admin e-posta adresi (iletişim formu bildirimleri için)
ADMIN_EMAIL=admin@your-domain.com

# Site Ayarları
NEXT_PUBLIC_SITE_NAME=Your Photography
NEXT_PUBLIC_SITE_URL=https://your-domain.com
