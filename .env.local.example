# Supabase Ayarları
# Supabase.com'dan project settings > API bölümünden alınacak
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Admin Şifresi (istediğin bir şifre belirle)
ADMIN_PASSWORD=your-secure-password-here

# Site Ayarları
NEXT_PUBLIC_SITE_NAME=Your Photography
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Cloudinary Ayarları (Fotoğraf Yükleme)
# cloudinary.com'dan alınacak
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Cloudinary API (Büyük dosyalar için - 10MB üzeri)
# cloudinary.com > Settings > API Keys
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
