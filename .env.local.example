# Supabase Ayarları
# Supabase.com'dan project settings > API bölümünden alınacak
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Admin Şifresi (istediğin bir şifre belirle)
ADMIN_PASSWORD=your-secure-password-here

# Site Ayarları
NEXT_PUBLIC_SITE_NAME=Your Photography
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Resend E-mail Ayarları
# Resend.com'dan API key alınacak
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Gönderici e-mail adresi (domain doğrulaması gerekir)
EMAIL_FROM=noreply@yourdomain.com
# Site sahibinin e-mail adresi (iletişim formları buraya gönderilir)
CONTACT_EMAIL=hello@yourdomain.com
